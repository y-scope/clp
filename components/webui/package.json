{
  "name": "webui",
  "version": "0.1.0",
  "description": "",
  "workspaces": [
    "common",
    "client",
    "server"
  ],
  "scripts": {
    "init": "npm clean-install --workspaces && npm --workspace common run build",
    "lint:check": "npm run lint:check --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "dev": "concurrently -c auto \"npm run dev:*\"",
    "dev:client": "npm --workspace client run dev",
    "dev:common": "npm --workspace common run build:watch",
    "dev:server": "npm --workspace server run dev"
  },
  "author": "YScope Inc. <dev@yscope.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "overrides": {
    "react-syntax-highlighter": {
      "refractor": {
        "prismjs": "^1.30.0"
      }
    },
    "monaco-editor": {
      "dompurify": "3.3.0"
    }
  }
}
