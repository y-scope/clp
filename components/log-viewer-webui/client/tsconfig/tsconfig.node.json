{
  "extends": "./tsconfig.base.json",
  "include": [
    "../.storybook/**/*.ts",
    "../vite.config.ts",
    "../vitest.workspace.ts"
  ],

  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "target": "ES2022",
    "tsBuildInfoFile": "../node_modules/.tmp/tsconfig.node.tsbuildinfo",

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true
  }
}
